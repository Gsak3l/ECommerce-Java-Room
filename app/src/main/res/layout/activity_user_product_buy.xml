<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_view_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--drawer-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">


            <!--toolbar for the user-->
            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar_buy"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/MyActionBar" />
                </LinearLayout>

            </FrameLayout>

            <!--product page-->
            <!--title-->
            <TextView
                android:id="@+id/user_buy_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="THIS IS THE TITLE OF THE PRODUCT"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!--image-->
            <ImageView
                android:id="@+id/user_buy_product_image"
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher" />

            <!--price-->
            <TextView
                android:id="@+id/user_buy_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="22.90$"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--unit spinner-->
            <NumberPicker
                android:id="@+id/user_buy_product_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp" />

            <!--add to basket button-->
            <Button
                android:id="@+id/user_buy_add_to_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/buttons"
                android:text="purchase now!"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </RelativeLayout>
</ScrollView>
