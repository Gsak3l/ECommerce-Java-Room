<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <!--add new product text-->
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!--linear layout for the add new product page (admin only)
    linear1 is for the male clothing-->
    <LinearLayout
        android:id="@+id/category_linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/male_t_shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/male_tshirts" />

        <ImageView
            android:id="@+id/male_trousers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/male_trousers" />

        <ImageView
            android:id="@+id/male_sweaters"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/male_sweater" />

        <ImageView
            android:id="@+id/male_shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingBottom="15dp"
            android:src="@drawable/male_shoes" />


    </LinearLayout>

    <!--linear layout for the add new product page (admin only)
    linear1 is for the female clothing-->
    <LinearLayout
        android:id="@+id/category_linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_linear_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/female_dress" />

        <ImageView
            android:id="@+id/female_trousers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/female_trousers" />

        <ImageView
            android:id="@+id/female_skirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/female_skirt" />


        <ImageView
            android:id="@+id/female_shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/female_shoes" />

    </LinearLayout>


</RelativeLayout>